extends header

block html
    .app-menu-transparent
        .app-nav-left
            a(href='/')
                .app-logo
            .app-name
                | NOTEBOOK

    .app-content
        .signup-content
            .uk-card.uk-card-default.uk-card-body.card-border-radius
                    .uk-card-title
                        | SIGN IN

                    form.uk-grid-small(method='POST')
                        .uk-margin
                            .uk-width-1-1
                                label.text-label(for='strEmail') Email
                                input.uk-input(name='strEmail', type='email', required)
                            .uk-margin
                                label.text-label(for='strPassw2') Re-Enter Password:
                                input.uk-input(name='strPassw2', type='password', required)
                            .uk-margin
                                .uk-text-right
                                    button.uk-button.uk-button-primary(name='btnSigin', type='submit') SIGN IN

                                    a(href='/signup')
                                        button.uk-button.uk-button-default(type='button') SIGN UP
